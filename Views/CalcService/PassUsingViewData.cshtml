@{
    ViewData["Title"] = "PassUsingViewData";
    var data = ViewData["data"] as Lab11.Models.NumbersOperations;
}

@if (data != null)
{
    <h1>@ViewData["Title"]</h1>

    <div><strong>Rand Value First :</strong> <strong>@data.FirstNumber</strong></div>
    <div><strong>Rand Value Second :</strong> <strong>@data.SecondNumber</strong></div>

    <div><strong>Add :</strong></div>
    <div>@data.FirstNumber + @data.SecondNumber = @data.Sum</div>

    <div><strong>Sub :</strong></div>
    <div>@data.FirstNumber - @data.SecondNumber = @data.Sub</div>

    <div><strong>Mult :</strong></div>
    <div>@data.FirstNumber * @data.SecondNumber = @data.Mult</div>

    <div><strong>Div :</strong></div>
    @if (data.SecondNumber == 0)
    {
        <div>Division by zero</div>
    }
    else
    {
        <div>@data.FirstNumber / @data.SecondNumber = @data.Div</div>
    }
}
else
{
    <div>Data is not available.</div>
}